@model IList<ProductTagModel>
@if (Model.Count > 0)
{
    <div class="product-tags-box">
        <div class="product-tags-list">
            <ul>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <li class="chip">
                        <a href="@Url.RouteUrl("ProductsByTag", new { Model[i].SeName })" class="producttag">
                            @Model[i].Name
                        </a> 
                        <span>@T("Products.Tags.Count", Model[i].ProductCount)</span>
                    </li>
                    
                }
            </ul>
        </div>
    </div>
}